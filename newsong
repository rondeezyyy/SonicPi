define :thang do |n1, n2|
  
  sample n1, sustain: 16, sustain_level: 16
  sleep 0.7
  sample n1, sustain: 16, sustain_level: 16
  sleep 0.65
  sample n1, sustain: 16, sustain_level: 16
  sleep 0.152
  sample n2, sustain: 16, sustain_level: 16
  
end

