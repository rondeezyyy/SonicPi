use_bpm 87
use_synth :piano


define :testitout do
  piano = [:gs4, :as4, :gs4, :cs4, :ds4, :as3, :fs3]
  timing = [0, 0.5, 1, 0, 0, 0, 2.5, 0]
  
  i = 0
  
  live_loop :test do
    7.times do
      play piano[i]
      sleep timing[i]
      i = i + 1
    end
    stop
  end
  
  piano2 = [:ds2, :as1, :b1]
  timing2 = [0.75, 0.75, 2.5]
  i2 = 0
  live_loop :test2 do
    3.times do
      play piano2[i2], sustain: 12
      sleep timing2[i2]
      i2 = i2 + 1
    end
    stop
  end
  
  sleep 4
  
  piano3 = [:gs4, :as4, :gs4, :cs4, :ds4, :as3, :fs3, :fs4]
  timing3 = [0,0.5,1,0,0,0,1.5,1]
  
  i3 = 0
  
  live_loop :test3 do
    8.times do
      play piano3[i3]
      sleep timing3[i3]
      i3 = i3 + 1
    end
    stop
  end
  
  piano2 = [:ds2, :as1, :b1]
  timing2 = [0.75, 0.75, 2.5]
  i2 = 0
  live_loop :test4 do
    3.times do
      play piano2[i2], sustain: 12
      sleep timing2[i2]
      i2 = i2 + 1
    end
    stop
  end
end

